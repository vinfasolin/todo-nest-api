// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Prisma 7: a URL vem do prisma.config.ts (env DATABASE_URL)
}

model PlayingWithNeon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real

  @@map("playing_with_neon")
}

model User {
  id           String   @id @default(cuid())
  googleSub    String?  @unique
  email        String   @unique
  name         String?
  picture      String?
  passwordHash String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // relações
  todos          Todo[]
  passwordResets PasswordReset[]
}

model Todo {
  id          String  @id @default(cuid())
  title       String
  description String?
  done        Boolean @default(false)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // índices
  @@index([userId])

  // necessário para paginação estável com orderBy createdAt desc, id desc
  // permite cursor composto: userId_createdAt_id
  @@unique([userId, createdAt, id])
  @@index([userId, createdAt, id])
}

model PasswordReset {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  codeHash  String
  expiresAt DateTime
  usedAt    DateTime?

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}